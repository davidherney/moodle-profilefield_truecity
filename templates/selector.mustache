{{!
    @template profilefield_truecity/selector

    Template to select country, region and city.

    Example context (json):
    {
    }
}}
<div id="truecity-selector-{{uniqid}}" class="truecity-selector">
    <div class="truecity-information">
        <span data-locationtext="true">{{{currentinfo}}}</span>
        <button type="button" class="btn btn-secondary btn-sm truecity-change-btn" data-act="openselector">
            {{#str}}selectlocation, profilefield_truecity{{/str}}
        </button>
    </div>
    <div class="modal-body hidden">
        <div class="truecity-selector-list">
            <h5>{{#str}}country{{/str}}</h5>
            {{{countrieslisthtml}}}
        </div>
        <div class="truecity-selector-list">
            <h5>{{#str}}region, profilefield_truecity{{/str}}</h5>
            {{{regionlisthtml}}}
        </div>
        <div class="truecity-selector-list">
            <h5>{{#str}}city{{/str}}</h5>
            {{{citylisthtml}}}
        </div>
    </div>
</div>
